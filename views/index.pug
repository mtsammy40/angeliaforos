extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/sendMail", method="get")
    .test
      label(for='name') Email:
      input#name.form-control(type='email', placeholder='Email Here' name='email')
    .test
      input#submit(type='submit', value='Send Email')
  .NewForm
  form(action="/newAdmin" method="POST" enctype="multipart/form-data")
    .test
      label(for='data') name:
      input#data(type="text", name="name")
    .test
      label(for='data') Id:
      input#data(type="text", name="id")
    .test
      label(for='data') Data:
      input#data(type="file", name="dp")
    .test
      input(type="submit", value="Send")
  .test
    a(href="http://localhost:3000/data") View all
  .test
    a(href="http://localhost:3000/images") View Image
  .test
    form(action="/getdp", method="post")
      label(for="id") Id
      input#id(type="text", name="id")
      input#sub(type="submit" value="Get Dp")
  .test
    h2 Approve Admin
    form(action="/approveAdmin", method="post")
      label(for="id") Id
      input#id(type="text", name="id")
      input#sub(type="submit" value="Approve")
  .test
    h2 send mail
    form(action="/sendIdentity", method="post")
      label(for="id") Id
      input#id(type="text", name="id")
      input#id(type="text", name="name" placeholder="name")
      input#email(type="email", name="email" placeholder="email")
      input#data(type="text", name="data")
      input#sub(type="submit" value="Approve")